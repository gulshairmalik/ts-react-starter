{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./",
        "noEmit": false,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "experimentalDecorators": true
    },
    "exclude": ["node_modules", "**/node_modules/*", "static", "dist"],
    "include": ["src/**/*", "test/**/*"]
}
